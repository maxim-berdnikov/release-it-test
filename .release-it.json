{
    "git": {
      "commitMessage": "Release v${version}",
      "requireUpstream": false,
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
      "push": false
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
  }
  